<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Store/etc/config.xsd">
    <default>
        <contactwidget_section>
            <general>
                <enable>0</enable>
            </general>
            <recaptcha>
                <recaptcha_theme>light</recaptcha_theme>
                <recaptcha_errormessage>Invalid captcha. Please try again.</recaptcha_errormessage>
            </recaptcha>
            <emailsend>
                <emailto><![CDATA[hello@example.com]]></emailto>
                <emailsenderto>custom2</emailsenderto>
                <emailtemplate>contactwidget_section_emailsend_emailtemplate</emailtemplate>
            </emailsend>
            <fieldlabeling>
                <name>First Name</name>
                <email>Email</email>
                <phonenumber>Telephone</phonenumber>
                <subject>Subject</subject>
                <hearing>How did you hear about us?</hearing>
                <interest>Interested in our blog?</interest>
                <education>What is your Education?</education>
                <comments>What’s on your mind?</comments>
            </fieldlabeling>
            <placeholderlabeling>
                <name>First Name</name>
                <email>Email</email>
                <phonenumber>Telephone</phonenumber>
                <subject>Subject</subject>
                <comments>What’s on your mind?</comments>
            </placeholderlabeling>
        </contactwidget_section>
    </default>
</config>
